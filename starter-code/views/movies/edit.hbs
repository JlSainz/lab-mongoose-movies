<h2>Update info: {{movie.title}}</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <input type="text" name="title" placeholder={{movie.title}} value="{{movie.title}}">
  <input type="text" name="genre" placeholder={{movie.genre}} value="{{movie.genre}}">
  <input type="text" name="plot" placeholder={{movie.plot}} value="{{movie.plot}}">
  <input type="hidden" name="_id" value="{movie._id}}">
  <input type="submit" value="Update">
</form>

<a href="/movies">BACK</a>